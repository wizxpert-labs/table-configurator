{
    "name": "@wizxpert/table-configurator",
    "version": "1.0.0",
    "description": "Configurable table toolkit for Vue 3 + PrimeVue",
    "type": "module",
    "license": "MIT OR Apache-2.0",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE-APACHE",
        "LICENSE-MIT",
        "NOTICE"
    ],
    "sideEffects": false,
    "peerDependencies": {
        "@primevue/themes": "^4.3.0",
        "pinia": "^3.0.3",
        "primeicons": "^7.0.0",
        "primevue": "^4.3.0",
        "vue": "^3.5.0"
    },
    "peerDependenciesMeta": {
        "primeicons": {
            "optional": true
        }
    },
    "devDependencies": {
        "typescript": "^5.5.0",
        "tsup": "^8.0.1",
        "@primevue/themes": "^4.3.9",
        "primeflex": "^4.0.0",
        "primeicons": "^7.0.0",
        "primevue": "^4.4.0",
        "vitepress": "^2.0.0-alpha.12",
        "vue": "^3.5.22"
    },
    "scripts": {
        "build": "tsup src/index.ts --dts --format esm,cjs --sourcemap --out-dir dist",
        "clean": "rimraf dist",
        "pack:dry": "npm pack --dry-run",
        "prepublishOnly": "npm run build && npm run pack:dry",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/wizxpert-labs/table-configurator.git"
    },
    "bugs": {
        "url": "https://github.com/wizxpert-labs/table-configurator/issues"
    },
    "homepage": "https://wizxpert.net",
    "keywords": [
        "vue",
        "primevue",
        "datatable",
        "treetable",
        "configurator",
        "pinia"
    ]
}
